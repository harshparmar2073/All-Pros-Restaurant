{
  "version": 2,
  "builds": [
    {
      "src": "all-pros-backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "all-pros-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "all-pros-backend/index.js" },
    { "src": "/uploads/(.*)", "dest": "all-pros-backend/uploads/$1" },
    { "src": "/(.*)", "dest": "all-pros-frontend/build/index.html" }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "CORS_ORIGIN": "https://your-frontend.vercel.app",
    "PORT": "5000"
  }
}
